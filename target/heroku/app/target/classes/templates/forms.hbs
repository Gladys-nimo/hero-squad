{{#partial "content"}}
    <section class="landing-pg">
        <div class="land-left"></div>
        <div class="land-right"></div>
        <form class="form" action="/new/hero" method="post">
            <h1>Create Your Hero</h1>
            <div class="form-group">
                <input type="text" placeholder="Enter your hero's name" name="name" required>
            </div>
              <div class="form-group">
                  <input type="text" placeholder="Enter your hero's special powers" name="power" required>
              </div>
                <div class="form-group">
                     <input type="text" placeholder="Enter your hero's weakness" name="weakness" required>
                </div>
            <input class="btns" type="submit">
        </form>
    </section>
{{/partial}}
{{> layout.hbs}}